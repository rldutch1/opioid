//alert("Thanks for submitting the details");
function checkDiscount()
{
totprice = 0;
var price = new Array();
price[0] = 300.25;
price[1] = 100.15;
price[2] = 125.85;
price[3] = 50.90;
var quantity = new Array();
quantity[0] = parseInt(form1.qty1.value);
quantity[1] = parseInt(form1.qty2.value);
quantity[2] = parseInt(form1.qty3.value);
quantity[3] = parseInt(form1.qty4.value);
for(i=0;i<4;i++)
{
totprice = totprice + quantity[i] * price[i];
}
memtype = form1.membertype.value;
dispdiscnt = '';
switch(memtype)
{
case "gold":
discount=15;
dispdiscnt = discount + " % discount for Gold Card Members";
break;
case "silver":
discount=10;
dispdiscnt = discount + " % discount for Silver Card Members";
break;
case "privilege":
discount=5; dispdiscnt = discount + " % discount for Privilege Card Members";
break;
default:
discount=0;
}
disprice = totprice - totprice * discount/100;
}
}
//]]>
function formatName(f_name,l_name)
{
var tmpStr, strLen, tmpChar, fname, lname, firstname, lastname;
fname = f_name.toLowerCase();
strLen = fname.length;
tmpChar = fname.substring(0,1).toUpperCase();
tmpStr = fname.substring(1,strLen);
firstname = tmpChar + tmpStr;
lname = l_name.toLowerCase();
strLen = lname.length;
tmpChar = lname.substring(0,1).toUpperCase();
tmpStr = lname.substring(1,strLen);
lastname = tmpChar + tmpStr;
fullname = firstname.concat(" " + lastname);
return (fullname);
}
